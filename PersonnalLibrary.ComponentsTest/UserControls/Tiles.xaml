            </components:Tile.TileItems>
        </components:Tile>


        <components:Tile Grid.Row="0" Grid.Column="1" Width="100" Height="100" AnimationDirection="LeftRight" TileDescription="Test">
            <components:Tile.TileItems>
                <components:TextTileItem  Title="Thierry has mastered WPF !" Foreground="White" Theme="Red" />
                <components:TextTileItem  Title="Thierry has mastered WPF !" Foreground="White" Theme="Red" />
            </components:Tile.TileItems>
        </components:Tile>


        <components:Tile Grid.Row="1" Grid.Column="0" Width="100" Height="100" AnimationDirection="RightLeft" TileDescription="Test">
            <components:Tile.TileItems>
                <components:TextTileItem  Title="Thierry has mastered WPF !" Foreground="White" Theme="Red" />
                <components:TextTileItem  Title="Thierry has mastered WPF !" Foreground="White" Theme="Red" />
            </components:Tile.TileItems>
        </components:Tile>


        <components:Tile Grid.Row="1" Grid.Column="1" Width="100" Height="100" AnimationDirection="TopDown" TileDescription="Test">
            <components:Tile.TileItems>
                <components:TextTileItem  Title="Thierry has mastered WPF !" Foreground="White" Theme="Red" />
                <components:TextTileItem  Title="Thierry has mastered WPF !" Foreground="White" Theme="Red" />
            </components:Tile.TileItems>
        </components:Tile>

    </Grid>
</UserControl>
